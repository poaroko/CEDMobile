<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CEDMobile.SQLiteSample">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Student Code" x:Name="entStdCode" />
            <Entry Placeholder="Student Name" x:Name="entStdName" />
            <Button Text="Insert" x:Name="btnInsert" Clicked="btnInsert_Clicked" />
            <Button Text="Update" x:Name="btnUpdate" Clicked="btnUpdate_Clicked" />
            <Button Text="Delete" x:Name="btnDelete" Clicked="btnDelete_Clicked" />
            <Button Text="Show" x:Name="btnShow" Clicked="btnShow_Clicked" />
            <CollectionView x:Name="stdView" SelectionMode="Single" 
                            SelectionChanged="stdView_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding Code}"
                               TextColor="Silver"
                               FontSize="Small" />
                            <Label Text="{Binding Name}"
                               FontSize="Medium" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>